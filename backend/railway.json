{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "nixpacks",
        "buildCommand": "echo building!"
    },
    "deploy": {
        "startCommand": "echo starting!",
        "healthcheckPath": "/",
        "healthcheckTimeout": 100,
        "restartPolicyType": "never"
    },
    "layers": [
        {
            "name": "gnubg",
            "command": [
                "apt-get update",
                "apt-get install -y gnubg"
            ]
        }
    ]
}